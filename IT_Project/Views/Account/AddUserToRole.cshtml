@model IT_Project.Models.AddToRoleModel
@{
    ViewBag.Title = "AddUserToRole";
}

<div id="user-role" class="container">
    <h2>Add user with this email to a role:</h2>
    @using (Html.BeginForm("AddUserToRole", "Account"))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Email, "Email")
            @Html.TextBoxFor(m => m.Email, new { @class="form-control" })
        </div>
        <div class="form-group">
            @Html.DropDownListFor(m => m.SelectedRole, new SelectList(Model.Roles), new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-default">Save</button>
    }
</div>

