@model IT_Project.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    #reg-index {
        max-width: 800px;
        margin: 50px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    h4 {
        color: #333;
        font-weight: bold;
    }

    .form-control {
        border-radius: 4px;
        border: 1px solid #ced4da;
        padding: 10px;
    }

        .form-control:focus {
            border-color: #80bdff;
            box-shadow: 0 0 5px rgba(128, 189, 255, 0.5);
        }

    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 4px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .text-danger {
        color: #dc3545;
    }

    hr {
        border-top: 1px solid #ddd;
    }
</style>

<div id="reg-index" class="container">
    <main aria-labelledby="title">
        <h4 class="text-center mb-4">Create a new account</h4>

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()

            <hr class="mb-4" />
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <!-- Username Field -->
            <div class="form-group row mb-3">
                @Html.LabelFor(m => m.Username, new { @class = "col-md-4 col-form-label text-md-end" })
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Enter your username" })
                </div>
            </div>

            <!-- Email Field -->
            <div class="form-group row mb-3">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-4 col-form-label text-md-end" })
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter your email" })
                </div>
            </div>

            <!-- Password Field -->
            <div class="form-group row mb-3">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-4 col-form-label text-md-end" })
                <div class="col-md-6">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter your password" })
                </div>
            </div>

            <!-- Confirm Password Field -->
            <div class="form-group row mb-4">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 col-form-label text-md-end" })
                <div class="col-md-6">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm your password" })
                </div>
            </div>

            <!-- Submit Button -->
            <div class="form-group row">
                <div class="col-md-8 offset-md-4">
                    <input type="submit" value="Register" class="btn btn-primary btn-lg" />
                </div>
            </div>
        }
    </main>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
