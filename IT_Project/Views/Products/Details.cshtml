@model IT_Project.Models.Product

@{
    ViewBag.Title = "Details";
}

<style>
    #product-details {
        padding: 30px;
    }

    #details-img img {
        object-fit: cover;
        width: 100%;
        height: 100%;
    }

    .btnAdd, .btnEdit {
        display: block;
        width: 100%; 
        padding: 10px 0;
        text-align: center; 
        color: #fff; 
        border: none; 
        border-radius: 4px; 
        text-decoration: none; 
        font-size: 1rem;
        transition: background-color 0.3s ease;
    }

    .btnAdd {
        background-color: #28a745;
    }

    .btnEdit {
        background-color: #2399e6;
    }

    .btnAdd:hover {
        background-color: #218838; 
    }

    .btnEdit:hover {
        background-color: #0d2452;
    }


    a {
        text-decoration: none;
        color: #fff;
    }

    a:hover{
        color: #fff;
    }
</style>

<div class="container">
    <div id="product-details" class="row">
        <div id="details-img" class="col-md-6">
            <img src="@Model.ProductURL" />
        </div>
        <div id="details-text" class="col-md-6">
            <h1>@Model.Name</h1><br />
            <h5>@Model.Description</h5><br />
            <h5>@Model.Price€</h5><br />
            <h5>@Model.Size</h5><br />
            <h5>Category: @Model.Category.CategoryName</h5><br />
            <div id="product-color" style="width:50px; height: 50px; background-color: @Model.Color">

            </div><br />
            @Html.ActionLink("Add to cart", "AddToCart", new { id = Model.Id }, new { @class = "btnAdd" })
            <br />
            @if (User.IsInRole("Admin"))
            {
                @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btnEdit"})
            }
        </div>
    </div>
    <p>
        @{
            if (Model.CategoryId == 1)
            {
                @Html.ActionLink("Back to List", "Index")
            }
            else if (Model.CategoryId == 2)
            {
                @Html.ActionLink("Back to List", "Trousers")
            }
            else if (Model.CategoryId == 3)
            {
                @Html.ActionLink("Back to List", "Shirts")
            }
            else if (Model.CategoryId == 4)
            {
                @Html.ActionLink("Back to List", "Footwear")
            }
            else if (Model.CategoryId == 5)
            {
                @Html.ActionLink("Back to List", "Accessories")
            }
            else if (Model.CategoryId == 6)
            {
                @Html.ActionLink("Back to List", "CampingGear")
            }
        }
    </p>
</div>
