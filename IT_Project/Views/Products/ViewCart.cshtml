@model IEnumerable<IT_Project.Models.Product>

@{
    ViewBag.Title = "ViewCart";
}

<style>

    #removeCSS a {
        text-decoration: none;
        color: #fff;
        display: block;
        background-color: red;
        text-align: center;
        padding: 8px 5px;
        border-radius: 4px;
        transition: background-color 0.3s ease;
    }

        #removeCSS a:hover {
            background-color: #a71d2a;
        }

    #btnCheckout a {
        text-decoration: none;
        display: block;
        background-color: #28a745;
        color: #fff;
        text-align: center;
        padding: 8px 5px;
        border-radius: 4px;
        transition: background-color 0.3s ease;
    }

        #btnCheckout a:hover {
            background-color: #218838;
        }

    #cartCont {
        margin-top: 15px;
        height: 100vh;
    }

</style>

<div id="cartCont" class="container">
    <h2>Your Shopping Cart</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Product Image</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Number of products: @Model.Count()</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@item.ProductURL" style="max-width: 100px"/>
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("C")</td>
                    <td id="removeCSS">@Html.ActionLink("Remove Product","RemoveFromCart", new {id = item.Id})</td>
                </tr>
            }
        </tbody>
        
    </table>
    <p><b>Total: @Model.Sum(p => p.Price).ToString("C")</b></p>
    <br />
    <p id="btnCheckout">@Html.ActionLink("Checkout", "PlaceOrder")</p>
</div>
